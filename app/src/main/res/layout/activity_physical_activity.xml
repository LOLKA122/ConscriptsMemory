<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/header"
                android:layout_marginHorizontal="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/header_pull_ups"
                    android:textColor="#000"
                    android:textSize="24sp" />
            </RelativeLayout>
            <include
                layout="@layout/table_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />
            <include
                layout="@layout/table_pullups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:layout_marginHorizontal="70dp"
                android:background="@drawable/rect_edit">
                <EditText
                    android:id="@+id/etPullUps"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    style="@style/Widget.Material3.TextInputEditText.FilledBox"
                    android:inputType="numberDecimal" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/header"
                android:layout_marginHorizontal="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/header_lifting"
                    android:textColor="#000"
                    android:textSize="24sp" />
            </RelativeLayout>
            <include
                layout="@layout/table_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />
            <include
                layout="@layout/table_lifting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:layout_marginHorizontal="70dp"
                android:background="@drawable/rect_edit">
                <EditText
                    android:id="@+id/etLifting"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    style="@style/Widget.Material3.TextInputEditText.FilledBox"
                    android:inputType="numberDecimal" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/header"
                android:layout_marginHorizontal="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/header_push_ups"
                    android:textColor="#000"
                    android:textSize="24sp" />
            </RelativeLayout>
            <include
                layout="@layout/table_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />
            <include
                layout="@layout/table_pushups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:layout_marginHorizontal="70dp"
                android:background="@drawable/rect_edit">
                <EditText
                    android:id="@+id/etPushUps"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    style="@style/Widget.Material3.TextInputEditText.FilledBox"
                    android:inputType="numberDecimal" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/header"
                android:layout_marginHorizontal="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/header_run_1000"
                    android:textColor="#000"
                    android:textSize="24sp" />
            </RelativeLayout>
            <include
                layout="@layout/table_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />
            <include
                layout="@layout/table_run_1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:layout_marginHorizontal="70dp"
                android:background="@drawable/rect_edit">
                <EditText
                    android:id="@+id/etRun1000"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    style="@style/Widget.Material3.TextInputEditText.FilledBox"
                    android:inputType="numberDecimal" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/header"
                android:layout_marginHorizontal="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/header_run_100"
                    android:textColor="#000"
                    android:textSize="24sp" />
            </RelativeLayout>
            <include
                layout="@layout/table_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />
            <include
                layout="@layout/table_run_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:layout_marginHorizontal="70dp"
                android:background="@drawable/rect_edit">
                <EditText
                    android:id="@+id/etRun100"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    style="@style/Widget.Material3.TextInputEditText.FilledBox"
                    android:inputType="numberDecimal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/header_red"
                android:layout_marginHorizontal="60dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/header_mark"
                    android:textColor="#000"
                    android:textSize="24sp" />
            </RelativeLayout>
            <include
                layout="@layout/table_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/header_red">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/header_result"
                        android:textColor="#000"
                        android:textSize="24sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/button">
                    <TextView
                        android:id="@+id/tvResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="24sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlInfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="i"
            android:textColor="#000"
            android:textSize="24sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>